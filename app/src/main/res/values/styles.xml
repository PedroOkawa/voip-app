    </style>

    <style name="AppTheme.Text.BodyTwo">
        <item name="android:textSize">@dimen/text_size_body_two</item>
    </style>

    <style name="AppTheme.Text.Button">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <!-- TEXT BOLD -->

