<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorTextDark</item>
        <item name="colorControlActivated">@color/colorTextDark</item>
        <item name="colorControlHighlight">@color/colorTextDark</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButton</item>
        <item name="android:windowBackground">@color/colorWindow</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    
    <style name="AppTheme.OverflowButton">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@color/colorWindowSplash</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">@color/colorTextToolbar</item>
    </style>

    <style name="AppTheme.TabLayout">
        <item name="tabBackground">@color/colorTabLayout</item>
        <item name="tabTextColor">@color/colorTextNormalTabLayout</item>
        <item name="tabSelectedTextColor">@color/colorTextSelectedTabLayout</item>
    </style>

    <style name="AppTheme.Navigation">
        <item name="android:background">@color/colorBottomNavigationItemBackground</item>
        <item name="itemBackground">@color/colorBottomNavigationItemBackground</item>
        <item name="itemIconTint">@color/colorBottomNavigationItemIcon</item>
        <item name="itemTextColor">@color/colorBottomNavigationItemText</item>
    </style>

    <!-- TEXT BASE -->

    <style name="AppTheme.Text">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <!-- TEXT REGULAR -->

    <style name="AppTheme.Text.HeadlineOne">
        <item name="android:textSize">@dimen/text_size_headline_one</item>
    </style>

    <style name="AppTheme.Text.HeadlineTwo">
        <item name="android:textSize">@dimen/text_size_headline_two</item>
    </style>

    <style name="AppTheme.Text.HeadlineThree">
